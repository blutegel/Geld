<VBox fx:id="superSceneMain" style="-fx-background-color: #7fff00" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="505.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bank.geld.BankController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>


    <Label fx:id="welcomeText" minHeight="-Infinity" prefHeight="83.0" prefWidth="460.0" text="Please first click Create Account then use the newly created account number listed below in the Account Number text field to use that account for deposit, withdraw, history, statement." translateY="30.0" wrapText="true" />
  <Button fx:id="createAccountBtn" minWidth="-Infinity" onAction="#handleCreateAccount" prefHeight="26.0" prefWidth="119.0" text="Create Account" translateX="-175.0" translateY="10.0" wrapText="true" />
